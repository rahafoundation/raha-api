{
  "name": "@raha/api-server",
  "version": "0.0.12",
  "description": "Backend services for Raha.",
  "main": "dist/app.js",
  "files": [
    "dist/**/*"
  ],
  "author": "Raha",
  "license": "Apache-2.0",
  "private": true,
  "dependencies": {
    "@google-cloud/firestore": "^0.15.4",
    "@google-cloud/storage": "^1.6.0",
    "@koa/cors": "2",
    "@raha/api-shared": "^0.1.16",
    "@sendgrid/client": "^6.3.0",
    "@sendgrid/mail": "^6.2.1",
    "@types/big.js": "^4.0.4",
    "@types/url-join": "^0.8.2",
    "big.js": "^5.0.3",
    "crypto-random-string": "^1.0.0",
    "discourse-sso": "rahafoundation/discourse_sso_node",
    "firebase-admin": "^5.12.0",
    "http-status": "^1.2.0",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "twilio": "^3.17.6"
  },
  "scripts": {
    "use-prod-config": "cp src/config/prod.config.ts src/config/config.ts",
    "use-test-config": "cp src/config/test.config.ts src/config/config.ts",
    "build:nodelete": "tsc",
    "build": "rm -rf dist && tsc",
    "start": "node dist/app.js",
    "start:dev": "yarn build && concurrently --names \"BUILD,SERVER\" \"yarn build:nodelete --watch\" \"NODE_ENV=development nodemon --watch 'dist/' --ext js,ts --ignore 'dist/**/*.test.(js,ts)' dist/app.js\"",
    "test": "jest",
    "deploy-prod": "yarn use-prod-config && yarn build && gcloud app deploy --project=raha-5395e",
    "deploy-test": "yarn use-test-config && yarn build && gcloud app deploy --project=raha-test"
  },
  "devDependencies": {
    "@types/crypto-random-string": "^1.0.0",
    "@types/jest": "^23.3.0",
    "@types/koa": "^2.0.45",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.28",
    "@types/koa__cors": "^2.2.2",
    "@types/node": "^9.6.2",
    "concurrently": "^3.6.1",
    "jest": "^23.4.1",
    "nodemon": "^1.18.3",
    "prettier": "^1.12.1",
    "ts-jest": "^23.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "[^/]+[.]test.(j|t)sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
