{
  "name": "raha-api",
  "version": "1.0.0",
  "description": "Backend services for Raha.",
  "main": "dist/app.js",
  "author": "Raha Foundation",
  "license": "Apache-2.0",
  "private": null,
  "dependencies": {
    "@koa/cors": "2",
    "async-busboy": "^0.6.2",
    "coconutjs": "^2.2.0",
    "firebase-admin": "^5.12.0",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0"
  },
  "scripts": {
    "use-prod-db": "cp src/config/firebase.prod.json src/config/firebase.config.json",
    "use-test-db": "cp src/config/firebase.test.json src/config/firebase.config.json",
    "build": "rm -rf dist && tsc && mkdir -p dist/config && cp src/DO_NOT_COMMIT.config.json dist/ && cp src/config/firebase.config.json dist/config/firebase.config.json",
    "start": "node dist/app.js",
    "test": "NODE_ENV=test node dist/app.js",
    "deploy": "yarn build && gcloud app deploy"
  },
  "devDependencies": {
    "@types/node": "^9.6.2",
    "prettier": "^1.12.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1"
  }
}
