{
  "name": "raha-api",
  "version": "1.0.0",
  "description": "Backend services for Raha.",
  "main": "dist/app.js",
  "author": "Raha Foundation",
  "license": "Apache-2.0",
  "private": true,
  "dependencies": {
    "@google-cloud/storage": "^1.6.0",
    "@koa/cors": "2",
    "async-busboy": "^0.6.2",
    "coconutjs": "^2.2.0",
    "firebase-admin": "^5.12.0",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0"
  },
  "scripts": {
    "use-prod-config": "cp src/config/prod.config.json src/config/config.json",
    "use-test-config": "cp src/config/test.config.json src/config/config.json",
    "build":
      "rm -rf dist && tsc && cp src/config/config.json dist/config/config.json",
    "start": "node dist/app.js",
    "test": "NODE_ENV=test node dist/app.js",
    "deploy-prod":
      "yarn use-prod-config && yarn build && gcloud app deploy --project=raha-5395e",
    "deploy-test":
      "yarn use-test-config && yarn build && gcloud app deploy --project=raha-test"
  },
  "devDependencies": {
    "@types/node": "^9.6.2",
    "prettier": "^1.12.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.8.1"
  }
}
